<Page
    x:Class="MasterVeLog.GLCodes"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MasterVeLog"
    xmlns:data="using:MasterVeLog"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="#4FB5D6" Width="Auto" Height="Auto">

        <Image x:ConnectionId='1' x:Name="imgLogo" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top" Height="40" Width="250" Source="Assets/atccorp_logoWhite.png"/>
        <Image x:ConnectionId='2' x:Name="imgCar" HorizontalAlignment="Center" Margin="0,60,0,0" VerticalAlignment="Top" Height="65" Width="65" Source="Assets/car64.png"/>
        <TextBlock x:ConnectionId='3' x:Name="lblGLCodesAdmin" HorizontalAlignment="Center" Margin="0,120,0,0" TextWrapping="Wrap" Text="GL Codes Admin" VerticalAlignment="Top" FontWeight="Bold" Foreground="#FFFFFF" FontSize="20" FontFamily="Arial Unicode MS"/>

        <StackPanel Orientation="Horizontal" Margin="20,100,20,0" HorizontalAlignment="Right">
            <Button x:ConnectionId='33' x:Name="btnClearFilters" Margin="0,0,0,0" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Clear All Filters" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="130" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                               />
            <Button x:ConnectionId='34' x:Name="btnVehicleLog" Margin="10,0,0,20" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Return to Vehicle Log" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="180" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                              />
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="20,160,20,20">
            <TextBlock x:ConnectionId='29' x:Name="lblDivisionId" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Division ID" VerticalAlignment="Top" FontFamily="Arial Unicode MS" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF"/>
            <TextBox x:ConnectionId='30' x:Name="txtDivisionId" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="50" IsReadOnly="True"/>
            <TextBlock x:ConnectionId='31' x:Name="lblDivision" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Division" VerticalAlignment="Top"  FontFamily="Arial Unicode MS" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF"/>
            <TextBox x:ConnectionId='32' x:Name="txtDivision" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="295"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="20,290,20,0" HorizontalAlignment="Left">
            <Button x:ConnectionId='27' x:Name="btnAddDivision" Margin="0,0,0,0" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Add Division" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="135" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                              />
            <Button x:ConnectionId='28' x:Name="btnDeleteDivision" Margin="10,0,0,20" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Delete Division" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="150" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                                 />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="20,350,20,0" HorizontalAlignment="Left">
            <Button x:ConnectionId='25' x:Name="btnUpdateDivision" Margin="0,0,0,0" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Update Division" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="135" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                                 />
            <Button x:ConnectionId='26' x:Name="btnDeselectDivision" Margin="10,0,0,20" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Deselect Division" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="150" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                                   />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="20,400,20,20">
            <Grid x:ConnectionId='24' Name="division" Background="#FFFFFF"  CornerRadius="10" Padding="20"                          >
                <!--SyncFusion Division Data Grid-->
            </Grid>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="340,160,20,20">
            <TextBlock x:ConnectionId='20' x:Name="lblCampusId" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Campus ID" VerticalAlignment="Top"  FontFamily="Arial Unicode MS" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF"/>
            <TextBox x:ConnectionId='21' x:Name="txtCampusId" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="50" IsReadOnly="True"/>
            <TextBlock x:ConnectionId='22' x:Name="lblCampus" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Campus" VerticalAlignment="Top"  FontFamily="Arial Unicode MS" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF"/>
            <TextBox x:ConnectionId='23' x:Name="txtCampus" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="295"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="340,290,20,0" HorizontalAlignment="Left">
            <Button x:ConnectionId='18' x:Name="btnAddCampus" Margin="0,0,0,0" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Add Campus" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="135" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                            />
            <Button x:ConnectionId='19' x:Name="btnDeleteCampus" Margin="10,0,0,20" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Delete Campus" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="150" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                               />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="340,350,20,0" HorizontalAlignment="Left">
            <Button x:ConnectionId='16' x:Name="btnUpdateCampus" Margin="0,0,0,20" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Update Campus" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="135" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                               />
            <Button x:ConnectionId='17' x:Name="btnDeselectCampus" Margin="10,0,0,20" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Deselect Campus" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="150" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                                 />
        </StackPanel>

        <StackPanel Orientation="Horizontal"  Margin="340,400,32,20">
            <Grid x:ConnectionId='15' Name="campus" Background="#FFFFFF" CornerRadius="10" Padding="20"                       >
                <!--SyncFusion Campus Data Grid-->
            </Grid>
        </StackPanel>

        <StackPanel Orientation="Horizontal"  Margin="660,160,20,20">
            <Grid x:ConnectionId='14' Name="course" Background="#FFFFFF" CornerRadius="10" Padding="20"                       >
                <!--SyncFusion Course Data Grid-->
            </Grid>
        </StackPanel>

        <StackPanel Orientation="Vertical" Margin="1100,160,20,20">
            <TextBlock x:ConnectionId='8' x:Name="lblCourseId" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Course ID" VerticalAlignment="Top"  FontFamily="Arial Unicode MS" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF"/>
            <TextBox x:ConnectionId='9' x:Name="txtCourseId" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="50" IsReadOnly="True"/>
            <TextBlock x:ConnectionId='10' x:Name="lblCourse" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Course" VerticalAlignment="Top"  FontFamily="Arial Unicode MS" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF"/>
            <TextBox x:ConnectionId='11' x:Name="txtCourse" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="295"/>
            <TextBlock x:ConnectionId='12' x:Name="lblCourseDiv" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="Division" VerticalAlignment="Top"  FontFamily="Arial Unicode MS" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF"/>
            <TextBox x:ConnectionId='13' x:Name="txtCourseDiv" HorizontalAlignment="Left" Margin="0,0,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="295"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="1100,350,20,0" HorizontalAlignment="Left">
            <Button x:ConnectionId='6' x:Name="btnAddCourse" Margin="0,0,0,0" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Add Course" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="135" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                            />
            <Button x:ConnectionId='7' x:Name="btnDeleteCourse" Margin="10,0,0,20" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Delete Course" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="150" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                               />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="1100,410,20,0" HorizontalAlignment="Left">
            <Button x:ConnectionId='4' x:Name="btnUpdateCourse" Margin="0,0,0,0" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Update Course" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="135" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                               />
            <Button x:ConnectionId='5' x:Name="btnDeselectCourse" Margin="10,0,0,20" Foreground="#FFFFFF" BorderBrush="#FFFFFF" BorderThickness=".5" Content="Deselect Course" HorizontalAlignment="Center" VerticalAlignment="Top" Height="40" Width="150" FontWeight="Bold" FontSize="16" FontFamily="Arial Unicode MS"                                 />
        </StackPanel>

    </Grid>
</Page>

